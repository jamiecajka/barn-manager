<!DOCTYPE html>
<html>
  <head>
    <title>BreakableToy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
      <header>
        <div class="large-9 large-centered columns">
        <div class='page-head'>
          <h1 class='barn_name'>Seagull Performance Horses</h1>
        <%= image_tag 'horses.jpg', {class: 'header-picture'} %>
        <% if user_signed_in? %>
        <div class="row">
          <div class="medium-3 columns">
            <p><%= link_to "Edit Account", edit_user_registration_path, {class: 'word'} %></p>
          </div>
          <div class="medium-3 columns">
            <p><%= link_to "Sign Out", destroy_user_session_path, {method: :delete, class: 'word'} %></p>
          </div>
          <div class="medium-3 columns">
            <p><%= link_to "Home", user_path(current_user), {class: 'word'} %></p>
          </div>
        <div class="medium-3 columns">
          <p><%= link_to "Back", :back, {class: 'word'} %></p>
        </div>
      </div>
        <% else %>
        <p><%= link_to "Home", root_path, {class: 'word'} %></p>
      </div>
            <% end %>
        </div>
      </div>
    </div>
  </header>
    <%= notice %>
    <%= alert %>
    <%= yield %>
  </body>
</html>
