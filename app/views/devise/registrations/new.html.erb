<div class='form'>
  <h2 class='form_header'>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="small-6 large-centered columns">
        <div class="form-inputs">
          <%= f.input :name, label: 'Name', required: true %>
          <%= f.input :email, label: 'Email', required: true, autofocus: true %>
          <%= f.input :phone_number, label: 'Phone Number', required: true %>
          <%= f.input :address, label: 'Address', required: true %>
          <%= f.input :city, label: 'City', required: true %>
          <%= f.input :state, label: 'State', required: true %>
          <%= f.input :zip_code, label: 'Zip Code', required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign Up" %>
          <p><%= link_to "Back", :back, class: 'link' %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
