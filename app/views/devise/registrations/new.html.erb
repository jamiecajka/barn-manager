<div class='form'>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="small-6 large-centered columns">
        <div class="form-inputs">
          <h2 class='form_header'>Sign up</h2>
          <%= f.label :name, 'Name', class: 'form-actions' %>
          <%= f.input :name, required: true %>
          <%= f.label :email, 'Email', class: 'form-actions' %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.label :phone_number, 'Phone Number', class: 'form-actions' %>
          <%= f.input :phone_number %>
          <%= f.label :address, 'Address', class: 'form-actions' %>
          <%= f.input :address %>
          <%= f.label :city, 'City', class: 'form-actions' %>
          <%= f.input :city %>
          <%= f.label :state, 'State', class: 'form-actions' %>
          <%= f.input :state %>
          <%= f.label :zip_code, 'Zip Code', class: 'form-actions' %>
          <%= f.input :zip_code %>
          <%= f.label :password, 'Password', class: 'form-actions' %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.label :password_confirmation, 'Password Confirmation', class: 'form-actions' %>
          <%= f.input :password_confirmation, required: true %>
          <div class="form-actions">
            <%= f.button :submit, "Sign Up" %>
            <p><%= link_to "Back", :back, class: 'link' %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
