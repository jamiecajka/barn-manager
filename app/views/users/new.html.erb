<div class='header'>
  <br/>
  <h1 class='barn_name'>Seagull Performance Horses</h1>
</div>
<div class="row">
  <div class="small-2 large-4 columns">
    <img src="https://pbs.twimg.com/media/DGLHNb0XcAEBycJ.jpg">
  </div>
  <div class="small-4 large-4 columns">
    <img src="https://scontent.fbed1-1.fna.fbcdn.net/v/t1.0-9/75737_1503715755689_7854631_n.jpg?oh=88f48a76b85c3d83ceb57518523dd3ce&oe=59EEA365">
  </div>
  <div class="small-6 large-4 columns">
    <img src="https://scontent.fbed1-1.fna.fbcdn.net/v/t1.0-9/40884_1456373612165_1049684_n.jpg?oh=4b83d491ab9a5f07d38c771946070c7d&oe=59F63193">
  </div>
</div>
<div class="small-3 small-centered columns">
    <div class="card">
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <h2 class="nav_buttons"> <%= link_to 'Add New Horse', new_horse_path %> </h2>
          <h2 class="nav_buttons"> <%= link_to 'Add New Veterinarian', new_veterinarian_path %> </h2>
          <h2 class="nav_buttons"> <%= link_to 'Add New Farrier', new_farrier_path %> </h2>
        <% end %>
        <h2 class="nav_buttons"> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </h2>
        <h2 class="nav_buttons"> <%= link_to 'Edit Account', edit_user_registration_path %></h2>
        <h2 class="nav_buttons"> <%= link_to 'Owner Info', user_path(current_user) %>
      <% else %>
        <h2 class="nav_buttons"><%= link_to 'Sign In', new_user_session_path %></h2>
        <h2 class="nav_buttons"><%= link_to 'Sign Up', new_user_registration_path %></h2>
      <% end %>
    </div>
  </div>
</div>
