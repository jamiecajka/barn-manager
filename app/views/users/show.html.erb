<% if user_signed_in? %>
  <br></br>
  <br></br>
  <div class="row">
    <div class="small-6 columns">
      <div class='user_info'>
        <h1 class='user'><%= @user.name %></h1>
        <p><%= @user.email %></p>
        <p><%= @user.phone_number %></p>
        <p><%= @user.city %>, <%= @user.state %> <%= @user.zip_code %></p>
      </div>
    </div>
    <br></br>
    <div class="small-6 columns">
      <div class='horse_list' { display: inline }>
        <h2 class='horse'>Horses</h2>
        <% @horse.each do |h| %>
        <a href=<%= horse_path(h.id) %>>
          <% if h.user.id === @user.id %>
          <div class='callout'>
            <h3 class='horses'><%= h.barn_name %></h3>
          </div>
          <% end %>
        </a>
        <% end %>
      </div>
    </div>
  </div>
  <br></br>
  <br></br>
  <div class="row">
    <div class="small-6 columns">
      <div class='charges' { display: inline }>
        <h3 class='charges_head'>Charges</h3>
        <% @horse.each do |h| %>
          <% if h.user.id === @user.id %>
            <% @charges.each do |c| %>
              <% if c.horse.id === h.id %>
                <p><%= c.date %> <%= c.description %> <%= c.amount %>-<%= h.barn_name %></p>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="small-6 columns">
      <div class='events' { display: inline }>
        <h3 class='events_head'>Events</h3>
        <% @horse.each do |h| %>
          <% if h.user.id === @user.id %>
            <% @events.each do |e| %>
              <% if e.horse.id === h.id %>
                <p><%= e.date %> <%= e.description %>-<%= h.barn_name %></p>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
