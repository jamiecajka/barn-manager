<h1 class="form_header">Add New Farrier</h1>
<%= simple_form_for @farrier do |f| %>
<% if @farrier.errors.any? %>
<div id="error_explanation-farrier">
        <h2><%= pluralize(@horse.errors.count, "error") %> prohibited this farrier from being saved:</h2>

        <ul>
        <% @farrier.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
<div class="row">
  <div class="small-6 large-centered columns">
    <div class="form-inputs">
      <%= f.input :name, label: 'Name', autofocus: true %>
      <%= f.input :phone_number, label: 'Phone Number', autofocus: true %>
      <%= f.input :address, label: 'Address', autofocus: true %>
      <%= f.input :city, label: 'City', autofocus: true %>
      <%= f.input :state, label: 'State', autofocus: true %>
      <%= f.input :zip_code, label: 'Zip Code', autofocus: true %>
    </div>
    <div class='form-actions'>
      <%= f.button :submit, 'Update' %>
      <p><%= link_to "Delete Farrier", farrier_path(@farrier.id), data: { confirm: "Are you sure?" }, method: :delete, style: 'color: #474747;' %> <br />
        <%= link_to "Back", :back, class: 'link' %></p>
    </div>
    <% end %>
  </div>
</div>
